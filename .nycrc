{
  "all": true,
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/main.tsx",
    "src/vite-env.d.ts",
    "coverage/**",
    "dist/**",
    "node_modules/**",
    "test/**",
    "tests/**",
    "playwright/**"
  ],
  "reporter": [
    "lcov",
    "text",
    "html",
    "json"
  ],
  "report-dir": "coverage/merged",
  "temp-dir": ".nyc_output",
  "extension": [
    ".ts",
    ".tsx"
  ],
  "check-coverage": false,
  "per-file": false,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80
}
